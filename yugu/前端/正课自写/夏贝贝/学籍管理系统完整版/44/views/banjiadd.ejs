<%-include('./header.ejs')%>
<body>
    <form>
        <input type="text" name="className" placeholder="班级名称" required>
        <br>
        <input type="text" name="location" placeholder="班级位置" required>
        <br>
        <input type="text" name="teacher" placeholder="授课老师" required>
        <br>
        <button type="submit">添加班级</button>
    </form>
</body>
<!-- 提交 -->
<script>
    $('form').submit(function(ev){
        ev.preventDefault();
        var data =$(this).serialize();
        // 发请求
        $.post('/banji/add',data,function(res){
            if (res.error==0) {
                alert(res.msg);
                // 跳转学生添加界面
                location.href ='/student/add';
            }
            else
            {
                alert(res.msg);
            }
        })
    });
</script>
</html>