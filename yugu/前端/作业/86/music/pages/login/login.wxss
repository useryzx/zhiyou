/* pages/user/user.wxss */
page {
  height: 100%;
}

.user-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  /* border: 2rpx red solid; */
  background: linear-gradient(to right, #c7c3c323, #ffffff);
}

.user-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 50rpx;
}

.user-input {
  border: 2rpx #d43c33 solid;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
}
.btn{
  width: 100% !important;
  background: linear-gradient(to right, #c7c3c323, #f8f5f5)
}